@model List<BCInsight.Models.UserViewModel>
@{
    ViewBag.Title = "Site";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">User</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li class="breadcrumb-item active">User</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="card">
    <div class="card-header">
        <h3 class="card-title float-right">
            <a href="@Url.Action("AddUser","User")" type="button" class="btn btn-primary btn-block btn-sm "><i class="fa fa-plus"></i> ADD</a>
        </h3>
    </div>
    <div class="card-body">
        <span class="error">@TempData["errorMessage"]</span>
        <span style="color:green">@TempData["success"]</span>
        <table id="example1" class="w-100 table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Role</th>
                    <th>Mobile</th>
                    <th>UserName</th>
                    <th>Password</th>
                    <th>Email</th>
                    <th>Salary</th>
                    <th>Site</th>
                    <th>Department</th>
                    <th>Manager</th>
                    <th>StartTime</th>
                    <th>EndTime</th>
                    <th>Weekly Off Days</th>
                    <th width="70px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var rDate = item.CreatedOn != null ? item.CreatedOn.Value.ToString("dd-MM-yyyy") : string.Empty;

                    <tr>
                        <td>
                            <input type="hidden" value="@item.UserId" class="hdnId" />
                            @item.Name
                        </td>
                        <td>@item.Role</td>
                        <td>@item.Mobile</td>
                        <td>@item.UserName</td>
                        <td>@item.Password</td>
                        <td>@item.Email</td>
                        <td>@item.Salary</td>
                        <td>@item.SiteName</td>
                        <td>@item.DepartmentName</td>
                        <td>@item.ManagerName</td>
                        <td>@item.StartTime</td>
                        <td>@item.EndTime</td>
                        <td>@item.WeekOffDay</td>
                        <td>
                            @if (!item.IsDeleted)
                            {
                                <a href="@Url.Action("AddUser", "User", new { Id = item.UserId })" class="btn btn-primary btn-sm">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <span onclick="return confirm('Are you sure to delete ?')">
                                    <a href="@Url.Action("DeleteUser", "User", new { Id = item.UserId})" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </span>
                            }
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>

<!-- jQuery -->
<script src="~/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<script>
    $(function () {
        $("#example1").DataTable({
            "responsive": true,
            "lengthChange": true,
            "autoWidth": true,
            "language": {
                "emptyTable": "Record not found"
            },
            //"columnDefs": [
            //    { "width": 80, "targets": 09 }
            //]
        });
    });
</script>